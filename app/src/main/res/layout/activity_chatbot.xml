<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F9FCFF"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/backarrow1"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/con1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatbot_text"
            android:text="KitchenPal"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chatbot_img"
            android:layout_width="wrap_content"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/chatbot_img"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/chatbotimg1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/chatbot_text"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/con2"
        app:layout_constraintTop_toBottomOf="@+id/con1"
        app:layout_constraintBottom_toTopOf="@+id/con3"
        android:layout_height="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatbot_faq_qus_rcv"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/chatbot_ai_user_rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatbot_ai_user_rcv"
            android:paddingBottom="50dp"
            android:clipToPadding="false"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/chatbot_faq_qus_rcv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/con3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/con2"
        android:layout_height="70dp">

        <EditText
            android:id="@+id/chatbot_msg_writer"
            android:background="@drawable/btn_qty"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:hint="Ask a questions"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:elevation="10dp"
            app:layout_constraintEnd_toStartOf="@+id/send_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="50dp"/>

        <ImageView
            android:id="@+id/send_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/sendbtnimg"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@+id/chatbot_msg_writer"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>