<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sales_view_items"
    android:background="@drawable/btn_qty"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/con3"
        android:id="@+id/con2"
        android:background="@drawable/btn_qty"
        android:clipToOutline="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img1"
            android:clipToOutline="true"
            android:layout_width="match_parent"
            android:id="@+id/pro_img"
            android:scaleType="fitXY"
            android:layout_height="180dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:paddingVertical="3dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:backgroundTint="#80000000"
            android:background="@drawable/item_dashboard_name_price"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_food"
                android:layout_width="wrap_content"
                android:maxWidth="250dp"
                android:minWidth="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLines="1"
                android:text="Food Name"
                app:layout_constraintEnd_toStartOf="@+id/txt_price"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_food"
                android:text="र 20000"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:layout_width="60dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

<!--        <ImageButton-->
<!--            android:id="@+id/btn_favorite"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:layout_margin="10dp"-->
<!--            android:src="@drawable/select_items"-->
<!--            android:background="@drawable/bg_white_circle"-->
<!--            android:backgroundTint="@android:color/white"-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"/>-->


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/con3"
        app:layout_constraintTop_toBottomOf="@+id/con2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="10dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/store_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:drawableLeft="@drawable/baseline_store_24"
            android:text="Apple iphone 15 pro"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

