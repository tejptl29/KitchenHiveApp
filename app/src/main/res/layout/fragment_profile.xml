<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Profile"
            android:id="@+id/txt_profil"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="10dp">

            <!--        <ImageView-->
<!--            android:id="@+id/btn_logout"-->
<!--            android:layout_width="50dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="12dp"-->
<!--            android:layout_marginStart="20dp"-->
<!--            android:layout_marginEnd="20dp"-->
<!--            android:src="@drawable/logout_icone"-->
<!--            android:textSize="20dp"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent" />-->


        <TextView
            android:id="@+id/profile_name_inital"
            app:layout_constraintTop_toTopOf="parent"
            android:text="TP"
            android:textSize="50sp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:backgroundTint="#cce6ff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/btn_circle"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <TextView
            android:id="@+id/name_view"
            app:layout_constraintTop_toBottomOf="@+id/profile_name_inital"
            android:gravity="center|start"
            android:text="Name"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="50dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/name_txt"
            app:layout_constraintTop_toBottomOf="@+id/name_view"
            android:background="@drawable/btn_qty"
            android:gravity="center|start"
            android:hint="Name"
            android:paddingStart="15dp"
            android:layout_marginTop="5dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

            <TextView
                android:id="@+id/email_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center|start"
                android:paddingStart="15dp"
                android:text="E-mail"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_txt" />

        <TextView
            android:id="@+id/email_txt"
            app:layout_constraintTop_toBottomOf="@+id/email_view"
            android:background="@drawable/btn_qty"
            android:gravity="center|start"
            android:hint="Email"
            android:layout_marginTop="5dp"
            android:paddingStart="15dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/phone_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:text="Phone"
            android:textColor="@color/black"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_txt" />

        <TextView
            android:id="@+id/phone_txt"
            app:layout_constraintTop_toBottomOf="@+id/phone_view"
            android:background="@drawable/btn_qty"
            android:layout_marginTop="5dp"
            android:gravity="center|start"
            android:hint="Phone"
            android:paddingStart="15dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/phone_txt"
            android:layout_marginTop="40dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_qty"
            android:layout_marginEnd="10dp"
            android:text="Logout"
            android:textSize="20dp" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/chat_bot_btn"
            android:textSize="50sp"
            android:gravity="center"
            android:scaleType="centerCrop"
            android:backgroundTint="#cce6ff"
            android:elevation="10dp"
            android:src="@drawable/chatbotimg1"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>